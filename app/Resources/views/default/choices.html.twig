{% extends 'base.html.twig' %}

{% block header %}

    <header>
        <h1 class="logo-dare">DARE !</h1>
    </header>

{% endblock %}

{% block body %}
<div class="bg-choices text-light">
    <div class="container">
        <div class="section-header">
            <h1 class="text-center">May the fuck be in you</h1>
        </div>
    </div>
    <div class="container">
        <div class="row justify-content-md-center">
            {% for character in characters %}
                {% if character.name %}
                <div class="col-md-5 col-sm-6 text-center choices-card p-0 m-3">
                        <div class="card bg-grey-choices no-border-choices">
                            <div class="card-header border-bottom-choices">
                                <h5>{{ character.name }}</h5>
                            </div>
                            <div class="card-body d-inline-flex">
                                <img class="card-img-top choices-img-fluidmax" src="{{ character.image }}" alt="Card image cap">
                                <ul>
                                    <li>
                                        <h4>Description</h4>
                                    </li>
                                    <li>
                                        <h6>Gender: {{ character.gender }}</h6>
                                    </li>
                                    <li>
                                        <h6>Specie: {{ character.species }}</h6>
                                    </li>
                                    <li>
                                        <h6>Eye color: {{ character.eyeColor }}</h6>
                                    </li>
                                    <ol class="p-0">
                                        <a class="btn btn-primary" href=""><i class="fas fa-pencil-alt mr-2"></i>Choose</a>
                                    </ol>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="modal fade" id="modal{{ character.id }}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content choices-modal">
                                <div class="modal-header">
                                    <h2 class="modal-title" id="exampleModalLongTitle">{{ character.name }}</h2>
                                </div>
                                <div class="modal-body">
                                    <div class="row">
                                        <div class="col-md-6 align-items-center">
                                            <img class="rounded" src="{{ character.image }}">
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-12">
                                         <h4 class="text-center h4-modalTitle">Description</h4>
                                        </div>
                                    </div>
                                    <div class="row">
                                    <div class="col-6">
                                            <h6 class="p-pedigree">Sexe</h6>
                                            <h6 class="p-pedigree">Esp√®ce</h6>
                                            <h6 class="p-pedigree">Couleur des yeux</h6>
                                        </div>
                                        <div class="col-6">
                                            <h6>{{ character.gender }}</h6>
                                            <h6>{{ character.species }}</h6>
                                            <h6>{{ character.eyeColor }}</h6>
                                        </div>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                 </div>
                            </div>
                        </div>
                    </div>
                {% endif %}
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}
