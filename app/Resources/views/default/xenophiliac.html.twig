{% extends 'base.html.twig' %}

{% block header %}

    <header>
        <a href="/"><h1 class="logo-dare">DARE !</h1></a>
    </header>

{% endblock %}

{% block body %}

    <div class="container-fluid">
        <div class="bg-img">
            <div class="d-flex justify-content-center container">
                <form action="" method="post">
                    <div class="container FormDavid">
                        <h1 class="text-center">Want to meet the same specie?</h1>
                        <h4 class="font-italic SubtitleForbidden">Fill out the following form</h4>

                        <div class>
                            <label for="species"><b>Select your specie</b></label>
                            <select name="species">
                                <option value=""></option>
                                {% for specie in species %}
                                    <option value="{{ specie }}">{{ specie }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class>
                            <label for="name"><b>Select a gender</b></label>
                            <input type="radio" id="contactChoice1"
                                   name="gender" value="female">
                            <label for="contactChoice1">Male</label>

                            <input type="radio" id="contactChoice2"
                                   name="gender" value="male">
                            <label for="contactChoice2">Female</label>

                        </div>

                        <div class>
                            <label for="lastHomeworld"><b>Select a homeworld</b></label>
                            <select name="lastHomeworld">
                                <option value=""></option>
                                {% for homeworld in homeworlds %}
                                    <option value="{{ homeworld }}">{{ homeworld }}</option>
                                {% endfor %}

                            </select>
                        </div>

                        <div>

                            <button type="submit" class="btn ProfileButton ButtonBackground">Match now </button>
                        </div>
                </form>
            </div>
        </div>
    </div>

{% endblock %}
