{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid no-gutters bg01">
        <div class="row ligne1 no-gutters">
            <div class="col-md-6 text-center pt-6">
                <div class="card" style="width: 22rem;">
                    <div class="card-body p-1 frontSeizeCard">
                        {% if character.name is defined %}
                            {{ character.name }} <br>
                        {% endif %}
                    </div>
                    {% if character.image is defined %}
                        <img class="card-img-top imgSeize" src="{{ character.image }}" alt="Card image cap">
                    {% endif %}
                    <ul class="list-group list-group-flush ">
                        <li class="list-group-item p-1 frontSeizeCard text-left">
                            {% if character.height is defined %}
                                Height: {{ character.height }} m <br>
                            {% endif %}

                            {% if character.mass is defined %}
                                Mass: {{ character.mass }} Kg <br>
                            {% endif %}

                            {% if character.gender is defined %}
                                Gender: {{ character.gender }}  <br>
                            {% endif %}

                            {% if character.hairColor is defined %}
                                Hair color: {{ character.hairColor }}  <br>
                            {% endif %}

                            {% if character.eyeColor is defined %}
                                Eye color: {{ character.eyeColor }}  <br>
                            {% endif %}

                            {% if character.homeworld is defined %}
                                Homeworld: {{ character.homeworld }} <br>
                            {% endif %}

                            {% if character.bornLocation is defined %}
                                Born location: {{ character.bornLocation }} <br>
                            {% endif %}

                            {% if character.species is defined %}
                                species: {{ character.species }} <br>
                            {% endif %}

                            {% if character.affiliations is defined %}
                                Affiliations: {{ affiliations }} <br>
                            {% endif %}
                        </li>
                    </ul>
                </div>
            </div>
        </div>
