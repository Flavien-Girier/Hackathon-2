{% extends 'base.html.twig' %}

{% block header %}

    <header>
        <a href="/"><h1 class="logo-dare">DARE !</h1></a>
    </header>

{% endblock %}

{% block body %}


    <div class="container-fluid">
        <div class="row bg-img image-fluid">
            <div class="d-flex justify-content-center container mt-5">
                <form action="" method="POST">
                    <div class="container FormDavid">
                        <h1>Want to meet the other side ?</h1>
                        <h4 class="text-secondary font-italic">Fill out the following form</h4>

                        <div>
                            <label for="name"><b>Enter your name</b></label>
                            <input type="text" placeholder="Enter your name" name="name" required>
                        </div>
                        <p class="empireDavid mb-2 mt-4 d-block col-12">On what side are you?</p>
                        <div class="row content-justify-center">
                            <div class="col-5">
                                <input
                                        type="radio" name="affiliations"
                                        id="contactChoice1" class="input-hidden"
                                        value="Republic" />
                                <label for="contactChoice1">
                                    <img
                                            src="{{ asset('assets/image/Empire_logo.svg.png') }}"
                                            alt="contactChoice1" />
                                </label>
                            </div>
                            <div class="col-5">
                                <input
                                        type="radio" name="affiliations"
                                        id="contactChoice2" class="input-hidden"
                                        value="Rebel" />
                                <label for="contactChoice2">
                                    <img
                                            src="{{ asset('assets/image/Rebel_Alliance_logo.svg.png') }}"
                                            alt="contactChoice2" />
                                </label>
                            </div>
                        </div>
                        <div class>
                            <label for="height"><b>Select your height</b></label>
                            <input type="text" id="height" name="height" value="">
                        </div>
                        <div class>
                            <label for="mass"><b>Select your mass</b></label>
                            <input type="text" id="mass" name="mass" value="">
                        </div>
                    <div>
                </form>
            </div>
            <button type="submit" class="btn ProfileButton">Match now</button>
        </div>
    </div>

{% endblock %}
